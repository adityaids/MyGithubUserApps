<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.aditya.mygithubuserapps">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:usesCleartextTraffic="true"
        android:theme="@style/Theme.MyGithubUserApps">
        <activity android:name="com.aditya.mygithubuserapps.IntroActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.aditya.mygithubuserapps.MainActivity" />
        <activity android:name="com.aditya.mygithubuserapps.ProfileActivity"
            android:parentActivityName="com.aditya.mygithubuserapps.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.aditya.mygithubuserapps.MainActivity"/>
        </activity>
    </application>

</manifest>